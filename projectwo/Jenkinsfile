pipeline {
    agent any
    stages{

        stage('Stage 0: Build'){
            steps{

                sh "sudo docker-compose build"
            }
        }

        stage('Stage 1: Test'){
            steps{
                sh "sudo docker ps && docker images"
            }
        }

        stage('Stage 2: Deploy'){
            steps{
                sh "sudo docker-compose up -d"
            }
        }
    }
}

